{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": "off",
        "import/no-cycle": "off",
        "no-empty": "off",
        "no-tabs": "off",
        "no-mixed-spaces-and-tabs": "off",
        "no-restricted-globals": "off",
        "prefer-destructuring": "off",
        "no-restricted-syntax": "off",       
        "class-methods-use-this": "off"
    }
}